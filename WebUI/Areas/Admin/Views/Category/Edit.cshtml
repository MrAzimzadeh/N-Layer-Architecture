@model Category
<div class="row">
    <div class="col-lg-12">
        <form  method="post">
            <input type="hidden" asp-for="Id">
            <label asp-for="Name"></label>
            <input type="text" asp-for="Name">
            <span asp-validation-for="Name" class="text-danger" ></span>
            <button type="submit " class="btn btn-success">Edit</button>
        </form>
    </div>
</div>