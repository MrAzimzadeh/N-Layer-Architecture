@model IEnumerable<Category>

<div class="col-lg-12">
<a href="/admin/Category/Create" class="btn btn-dark w-100">Create </a>
    <table class="table table-dark">
        <thead> 
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Status</th>
                <th>Options</th>
            </tr>
        </thead>
        <tbody>
             @foreach (var category in Model)
            {
                <tr>
                    <td>@category.Id</td>
                    <td>@category.Name</td>
                    <td></td>
                    <td>
                        <a href="/Admin/Category/Delete/@category.Id" class="btn btn-warning">Delete</a>
                        <a href="/Admin/Category/Edit/@category.Id" class="btn btn-primary">Update</a>
                        <a href="/Admin/Category/Detail/@category.Id" class="btn btn-info">Detail</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>